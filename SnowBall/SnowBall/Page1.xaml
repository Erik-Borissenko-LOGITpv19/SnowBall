<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnowBall.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame x:Name="Head"
                BackgroundColor="Black"
                   CornerRadius="10"
                   BorderColor="Black"
                   Margin="170,50"
                   Padding="30">
            </Frame>
            <Frame x:Name="Head1"
                BackgroundColor="Black"
                   BorderColor="Black"
                   Margin="140,-60"
                   Padding="10"
                   CornerRadius="20">
                <Label Text="Шапка"
                       TextColor="White"
                       FontSize="Body"
                       HorizontalTextAlignment="Center">
                </Label>
            </Frame>
            <Frame x:Name="Head2" 
               BorderColor="Black"
                   CornerRadius="90"
                   Margin="130,53"
                   Padding="30"
                   >
                <Label Text="Head3"
                       TextColor="Black"
                       FontSize="Small"
                       HorizontalOptions="Center">
                </Label>
            </Frame>
            <Frame x:Name="Head4" 
                   BorderColor="Black"
                   CornerRadius="100"
                   Margin="110,-60"
                   Padding="55">
                <Label Text="Тело"
                       TextColor="Black"
                       FontSize="Small"
                       HorizontalOptions="Center">
                </Label>
            </Frame>
            <Frame x:Name="Head5" 
                BorderColor="Black"
                   CornerRadius="90"
                   Margin="90,54"
                   Padding="70">
                <Label Text="Основа"
                       TextColor="Black"
                       FontSize="Small"
                       HorizontalOptions="Center">
                </Label>
            </Frame>
            <StackLayout HorizontalOptions="Start" Orientation="Horizontal">
                <Button
                    FontSize="Small"
                        Margin="0,40"
                        Padding="-10"
                    x:Name="Head6"
                    BackgroundColor="Gray"
                    Text="Спрятать"
                    TextColor="White">
                </Button>
                <Button FontSize="Small"
                        Margin="0,40"
                        Padding="-10"
                    x:Name="Отобразить снеговика"
                    BackgroundColor="Gray"
                    Text="отобразить"
                    TextColor="White">
                </Button>
                <Button FontSize="Small"
                        Margin="0,40"
                        Padding="-10"
                    x:Name="Head7"
                    BackgroundColor="Gray"
                    Text="Рандом"
                    TextColor="White">
                </Button>
                <Button  FontSize="Small"
                        Margin="0,40"
                        Padding="10"
                    x:Name="Head8"
                    BackgroundColor="Gray"
                    Text="Растопить"
                    TextColor="White">
                </Button>
            </StackLayout>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Button  FontSize="Small"
                        Margin=""
                        Padding=""
                    x:Name="Head9"
                    BackgroundColor="Gray"
                    Text="Повернуть шляпу"
                    TextColor="White">
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>